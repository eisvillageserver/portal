<div class="row" ng-controller="BoxCreatorController">
  <div class="bootstrap-iso">
   <div class="container-fluid">
    <div class="row">
     <div class="col-md-12 col-sm-12 col-xs-12" ng-if="boxCreated == true">
       <h1>Box Created</h1>
       {{currentBox}}
       <div class="form-group">
         <div class="card">
           <div class="card-block">
             <h4 class="card-title">{[{currentBox["Name"]}]}</h4>
             <p class="card-text">{[{currentBox["Description"]}]}</p>
           </div>
           <ul class="list-group list-group-flush">
             <li class="list-group-item"><strong>ID</strong> {[{currentBox["BoxID"]}]}</li>
             <li class="list-group-item"><strong>Country</strong> {[{currentBox["Country"]}]}</li>
             <li class="list-group-item"><strong>Language</strong> {[{currentBox["Language"]}]}</li>
             <li class="list-group-item"><strong>Date Created</strong> {[{currentBox["DateCreated"]}]}</li>
           </ul>
         </div>



        <div>
         <button class="btn btn-primary " name="submit" type="submit" ng-click="reset()">
          Create Another Box
         </button>
       </div>
     </div>
     </div>

     <div class="col-md-12 col-sm-12 col-xs-12" ng-if="waitingForBox == true">
       <h1>Creating Box</h1>
       <div class="form-group">
        <div>
       </div>
     </div>
     </div>

     <div class="col-md-12 col-sm-12 col-xs-12" ng-if="boxCreated == false && waitingForBox == false">
      <h1>Creating Box ID {[{boxID}]}</h1>
      <form method="post">
       <div class="form-group ">
        <label class="control-label requiredField" for="name">
         Box Name
         <span class="asteriskField">
          *
         </span>
        </label>
        <input class="form-control" id="name" name="name" type="text" ng-model="create.name" required/>
        <span ng-show="create.name.$error.required">Username is required.</span>
       </div>
       <div class="form-group ">
        <label class="control-label requiredField" for="select">
         Country
         <span class="asteriskField">
          *
         </span>
        </label>
        <select class="select form-control" id="select" name="select" ng-model="create.country" required>
         <option value="Canada">
          Canada
         </option>
         <option value="Benin">
          Benin
         </option>
         <option value="China">
          China
         </option>
       </select>
       <span ng-show="create.country.$error.required">Country is required.</span>
       </div>
       <div class="form-group ">
        <label class="control-label requiredField" for="language">
         Language
         <span class="asteriskField">
          *
         </span>
        </label>
        <select class="select form-control" id="language" name="language" ng-model="create.language" required>
         <option value="English">
          English
         </option>
         <option value="French">
          French
         </option>
         <option value="Chinese">
          Chinese
         </option>
        </select>
        <span ng-show="create.language.$error.required">Language is required.</span>
       </div>
       <div class="form-group ">
        <label class="control-label " for="description">
         Box Description
        </label>
        <textarea class="form-control" cols="40" id="description" name="description" rows="10" ng-model="create.description"></textarea>
       </div>
       <div class="form-group">
        <div>
         <button class="btn btn-primary " name="submit" type="submit" ng-click="update(create)">
          Submit
         </button>
         <button class="btn btn-primary " name="reset" type="reset" ng-click="reset()">
           Reset
         </button>
        </div>
       </div>
      </form>
     </div>
    </div>
   </div>
  </div>

</div>
